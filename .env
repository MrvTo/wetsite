# W.E.T Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wet-database
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wet-database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-different-from-jwt-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Service Configuration
# For Gmail:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@wet-eyetracking.com

# For other SMTP providers:
# EMAIL_HOST=smtp.mailgun.org
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=postmaster@mg.yourdomain.com
# EMAIL_PASS=your-mailgun-password

# For Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASS=your-password

# For SendGrid:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASS=your-sendgrid-api-key

# Security Configuration
# BCRYPT_ROUNDS=12  # Already set in code, but can be overridden
# SESSION_SECRET=another-random-secret-for-sessions

# Rate Limiting (optional, defaults are set in code)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100
# AUTH_RATE_LIMIT_MAX=10

# Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Feature Flags
# ENABLE_EMAIL_VERIFICATION=true
# ENABLE_PASSWORD_RESET=true
# ENABLE_ACCOUNT_LOCKOUT=true

# Payment Integration (for future use)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# File Upload Configuration (for future use)
# MAX_FILE_SIZE=10485760  # 10MB
# UPLOAD_PATH=uploads/
# ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Third-party Integrations (for future use)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Analytics (for future use)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
# MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring (for future use)
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
